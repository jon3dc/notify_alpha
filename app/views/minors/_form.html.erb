<%= form_for minor, local: true do |form| %>
  <div class="card mb-3">
    <div class="card-body">

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Major(s)</label>
          <div class="col-sm-10">
            <%#= form.collection_select(:major_id, Major.all, :id, :name, { :include_blank => "Please Select" }, { :class => "select2-multiple select2-single form-control" }) %>
              <%= form.collection_select(:major_ids, Major.all, :id, :name, {}, { :multiple => true, :class => "select2-multiple form-control" }) %>
          </div>
        </div>

         <div class="form-group row">
          <label class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>
        
         <div class="form-group row">
          <label class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-10">
            <%= form.text_area :description, :rows => 5, class: "form-control" %>
          </div>
        </div>


        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Enter Text</label>
          <div class="col-sm-10">
            <%= form.text_area :enter_text, :rows => 5, class: "form-control" %>
          </div>
        </div>

         <div class="form-group row">
          <label class="col-sm-2 col-form-label">Exit Text</label>
          <div class="col-sm-10">
            <%= form.text_area :exit_text, :rows => 5, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="text-right">
      <%= form.submit class: "btn btn-outline-secondary" %>
    </div>
<% end %>