<div class="row mb-3">
  <div class="col-6"><h3>Minors</h3></div>
  <div class="col-6 text-right"><%= link_to 'New Minor', new_minor_path, class: "btn btn-outline-secondary" %></div>
</div>

<table class="table table-hover">
  <tbody>
      <% @minors.each do |minor| %>
      <tr>
        <td class="align-middle"><%= minor.name %></td>
        <td class="align-middle"><em class="text-muted"><%= minor.description.truncate(50) %></em></td>
        <td class="align-middle"><span class="badge badge-warning"><%= minor.major.name if minor.major %></span></td>
        <td class="text-right align-middle">
          <%= link_to 'Edit', edit_minor_path(minor), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Destroy', minor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>