<div class="row mb-3">
  <div class="col-6"><h3>Accounts</h3></div>
  <div class="col-6 text-right"><%= link_to 'New Account', new_account_path, class: "btn btn-outline-secondary" %></div>
</div>

<table class="table table-hover">
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td class="align-middle"><%= account.name %></td>
        <td class="align-middle"><em class="text-muted"><%= account.description.truncate(50) %></em></td>
        <td class="text-right align-middle">
          <%= link_to 'Edit', edit_account_path(account), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


