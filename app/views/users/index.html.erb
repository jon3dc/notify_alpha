<div class="row mb-3">
  <div class="col-6"><h3>Users</h3></div>
  <!-- <div class="col-6 text-right"><%#= link_to 'New User', new_user_path, class: "btn btn-outline-secondary" %></div> -->
</div>

<table class="table table-hover">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="align-middle"><%= user.email %></td>
        <td class="align-middle">

          <% if user.level == "basic" %>
            <span class="badge badge-secondary">
          <% elsif  user.level == "admin" %>
            <span class="badge badge-primary">
          <% elsif user.level == "super" %>
            <span class="badge badge-success">
          <% end %>
            <%= user.level %>
          </span>
        </td>
        <td class="text-right align-middle">
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


